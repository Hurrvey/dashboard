# CODE996 数据看板 - 环境变量配置示例
# 复制此文件为 .env 并根据实际情况修改

# ==================== Flask 配置 ====================
DEBUG=False
SECRET_KEY=your-secret-key-change-this-in-production

# ==================== Redis 配置 ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ==================== Git 配置 ====================
# Git 仓库工作目录（用于存储克隆的仓库）
GIT_WORKSPACE=./repos

# Git 克隆深度限制（0 表示完整克隆）
GIT_MAX_DEPTH=1000

# ==================== 缓存配置 ====================
# 缓存有效期（秒），默认 5 分钟
CACHE_TTL=300

# ==================== 性能配置 ====================
# 最大并发 worker 数量
MAX_WORKERS=5

# 最大项目数量限制
MAX_PROJECTS=50

# ==================== 日志配置 ====================
# 日志级别: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# 日志目录
LOG_DIR=./logs

# ==================== 项目配置（可选）====================
# 可以通过环境变量配置项目映射，但推荐使用 projects.json
# 格式: JSON 字符串
# PROJECTS_CONFIG='{"test1":"repos/test1","test2":"repos/test2"}'

# ==================== 默认项目列表 ====================
# JSON 数组或逗号分隔字符串。例如: ["https://gitea.example.com/org/repo","https://github.com/org/repo2"]
DEFAULT_PROJECTS=["test1","test2"]

# ==================== AI 分析服务配置 ====================
AI_ANALYZER_ENDPOINT=https://llm-router-new-api.zhifukj.com.cn/v1/chat/completions
AI_ANALYZER_API_KEY=Bearer your-api-key
AI_ANALYZER_MODEL=deepseek-chat

# 单个请求相关限制（可选）
AI_ANALYZER_MAX_TOKENS=4096
AI_ANALYZER_TIMEOUT=60
AI_ANALYZER_MAX_FILES=
AI_ANALYZER_MAX_FILE_SIZE=204800
AI_ANALYZER_MAX_CHARACTERS=6000
AI_ANALYZER_CONCURRENCY=5

